REACT_APP_GRAPHQL_ENDPOINT=http://localhost:8080/graphql

# Mock BFF Configuration
# Set to 'true' to use mock data instead of real BFF
# Set to 'false' or remove to use real BFF
REACT_APP_USE_MOCKS=false

# Optional: Add delay in milliseconds to simulate network latency
# Default is 0 (instant responses)
REACT_APP_MOCK_DELAY=0

# You can also toggle mocks at runtime in the browser console:
# mockConfig.enable()    - Enable mocks
# mockConfig.disable()   - Disable mocks
# mockConfig.help()      - Show all commands
